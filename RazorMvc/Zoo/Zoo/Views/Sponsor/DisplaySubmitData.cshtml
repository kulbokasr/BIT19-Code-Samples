@model SponsorModel
 
    @using (Html.BeginForm("SendSubmitData", "Sponsor", FormMethod.Post))
    {

        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Sponsor details</th>
            </tr>
            <tr>
                <td>First Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.FirstName)
                </td>
            </tr>
            <tr>
                <td>Last Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.LastName)
                </td>
            </tr>
            <tr>
                <td>Amount: </td>
                <td>
                    @Html.TextBoxFor(m => m.Amount)
                </td>
            </tr>
            <tr>
                <td>Animal sponsored: </td>
                <td>
                    @Html.DropDownListFor(x=>x.ZooId, new SelectList(Model.Animals, "Id", "Name"), "", new { @class = "form-control" })
                 
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Submit"/></td>
            </tr>
        </table>

    }
